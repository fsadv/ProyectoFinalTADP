@model Entidades.Usuario

@{
    Layout = null;
    ViewBag.Title = "Details";
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles | Daily.Web</title>
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/img/icono_daily.web.svg" rel="icon">
</head>

<body>

    <div class="form_usuario clase1">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="form_title">Detalles del Usuario</h4>
                <hr class="form_line" />
                <div class="form_container">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="form_fields">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control form_input", @id = "Nombre", @name = "Nombre", @type = "text", @PlaceHolder = "Nombre", disabled = "disabled", @readonly = "readonly"  } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form_fields">
                            @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control form_input", @id = "Apellido", @name = "Apellido", @type = "text", @PlaceHolder = "Apellido", disabled = "disabled", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form_fields">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form_input", @id = "Email", @name = "Email", @type = "text", @PlaceHolder = "Correo Electrónico", disabled = "disabled", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="form_fields">
                            @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control form_input", @id = "Clave", @name = "Clave", @type = "password", @PlaceHolder = "Contraseña", disabled = "disabled", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="form_fields">
                            @Html.EditorFor(model => model.TipoUsuario, new { htmlAttributes = new { @class = "form-control form_input", @id = "TipoUsuario", @name = "TipoUsuario", @type = "string", @PlaceHolder = "Tipo de Usuario (1 - 2 - 3 - 4)", disabled = "disabled", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.TipoUsuario, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">

                        <div class="form_fields">
                            @Html.EditorFor(model => model.UrlPerfil, new { htmlAttributes = new { @class = "form-control form_input", @id = "UrlPerfil", @name = "UrlPerfil", @type = "string", @PlaceHolder = "Url Perfil", disabled = "disabled", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.UrlPerfil, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="form_fields">
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control form_input",@id = "Descripcion", @name = "Descripcion", @type = "string", style = " rows=20, columns=40", @PlaceHolder = "Descripción", disabled = "disabled", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group form_checkbox">
                        @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form_fields ">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.Estado, new { @disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group btn_details  btn_container">

                        <a href="/Usuarios/Index" class="btn_volver" style="text-decoration: none; color:black;">
                            <span>Regresar</span>
                            <img src="~/assets/img/icono_volver.svg" class="icono_volver" />
                        </a>

                    </div>
                </div>
            </div>

        }
    </div>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>


</html>